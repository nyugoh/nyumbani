<div class="row justify-content-center">
  <div class="col-12 col-sm-10">
    <div class="shadow-sm p-3 mb-5 bg-white rounded rental-filters">
      <form class="form-inline">
        <input type="search" style="margin-right: 10px;" class="form-control" placeholder="Search location/ building ...">
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Type</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
          <option value="1">Single</option>
          <option value="2">Bedsitter</option>
          <option value="3">1 Bedroom</option>
          <option value="3">2 Bedroom</option>
          <option value="3">Office</option>
        </select>

        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Rooms</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>

        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Price</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
          <option selected>Below 5k</option>
          <option value="0">6k - 10k</option>
          <option value="1">11k - 15k</option>
          <option value="2">16k - 20k</option>
          <option value="3">21k - 50k</option>
          <option value="3">Above 51k</option>
        </select>

        <button type="submit" style="position: absolute; right: 10px;" class="btn btn-primary my-1">SEARCH <span class="oi oi-magnifying-glass"></span></button>

      </form>
    </div>
    <div class="row rentals-listings">
      {{#each rentals as |rental|}}
        {{#unless rental.isNew}}
          {{rental-card rental=rental}}
        {{/unless}}
      {{/each}}
    </div>
  </div>
</div>
