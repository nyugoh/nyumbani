<div class="row">
  <div class="building-name col-12">
    <h2>{{rental.buildingName}}</h2>
  </div>
  <div class="col-12 col-md-9">
    {{image-slider}}
  </div>
  <div class="col-12 col-md-3">
    <div class="rental-summary">
      <h4>{{rental.type}}, Ksh.{{rental.monthlyRent}} per month</h4>
    </div>
    <div class="rental-details">
      <p><span class="oi oi-map-marker"></span> {{rental.town}} {{rental.subCounty}}</p>
      <p><span class="oi oi-bolt"></span> {{rental.bedrooms}} Bedrooms</p>
      <p><span class="oi oi-command"></span> {{rental.noSockets}} Sockets</p>
      <p><span class="oi oi-info"></span> {{rental.noTaps}} Taps</p>
      <p><span class="oi oi-flash"></span> {{rental.noWindows}} Windows</p>
      {{rating-stars rating=rental.rating}}
      <div class="cta justify-content-center">
        <button class="btn btn-secondary">BOOK</button>
        <button class="btn btn-success">CONTACT OWNER</button>
        <button class="btn btn-primary">LEAVE A MESSAGE</button>
      </div>
      <p><span>Added: <b>{{moment-from-now rental.updatedAt}}</b></span></p>
    </div>
  </div>
  <div class="col-12">
    <div class="description">
      <h4>Description</h4>
      <div class="dropdown-divider"/>
      <p>{{rental.briefDescription}}</p>
    </div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs justify-content-center" role="tablist">
      <li class="nav-item">
        <span class="nav-link active pointer" id="rental-reviews-tab" data-toggle="tab" href="#rental-reviews" role="tab" aria-controls="rental-reviews" aria-selected="false">Reviews</span>
      </li>
      <li class="nav-item">
        <span class="nav-link pointer" id="rental-description-tab" data-toggle="tab" href="#rental-description" role="tab" aria-controls="rental-description" aria-selected="true">Description</span>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane" id="rental-description" role="tabpanel" aria-labelledby="rental-description-tab">
        <div class="row justify-content-center">
          {{{rental.fullDescription}}}
        </div>
      </div>
      <div class="tab-pane active" id="rental-reviews" role="tabpanel" aria-labelledby="rental-reviews-tab">
        <div class="row  justify-content-center">
          <div class="col-12">
            Average rating : {{rating-stars rating=rental.rating}} <span>{{rental.rating}}</span>
          </div>
          <div class="dropdown-divider"></div>
          <div class="col-11">
            <ul class="list-unstyled">
