<div class="row justify-content-center">
  <div class="col-12 col-sm-8">
    <div class="add-rental">
      <div>
        <h3>Add rentals property</h3>
        <div class="dropdown-divider"></div>
        {{navigation-step page=page}}
      </div>
      {{#em-form class='form' model=model formLayout='default' submitButton=false as |form|}}
        {{#if (eq page 1)}}
          <div style="margin-top: 20px;">
            <h4>Basic required details</h4>
            <div class="dropdown-divider"></div>
            {{form.input property="location" label="Location" placeholder="Enter a property location ..."}}
            {{form.input property="buildingName" label="Building Name" placeholder="Building name ..."}}
            {{form.input property="monthlyRent" label="Monthly rent" placeholder="Monthly rent per month ..."}}
            {{form.input property="deposit" label="Deposit" placeholder="Entry deposit ..."}}
            {{form.select property="type" label="Rental Type" prompt="--select type of house--" content=rentalTypes optionValuePath="id" optionLabelPath="name"}}
            <div class="form-group text-right">
              <button class="btn btn-success" {{ action "validateBasic"}}>Add more details <span class="oi oi-arrow-thick-right"></span></button>
              or
              <button class="btn btn-success" {{ action "validateBasic"}}>SAVE</button>
            </div>
          </div>
        {{/if}}

        {{#if (eq page 2)}}
          <div style="margin-top: 20px;">
            <h4>Property description</h4>
            <div class="dropdown-divider"></div>
            <p><small>Check the fields appropriately</small></p>
            <div class="row">
              <div class="col-4">
                <div class="form-group radio-labels">
                  <label>Has tiles ?</label>
                </div>
                <div class="form-group radio-labels">
                  <label>Has a kitchen sink ?</label>
                </div>
                <div class="form-group radio-labels">
                  <label>Has electricity ?</label>
                </div>
                <div class="form-group radio-labels">
                  <label>Has a balcony ?</label>
                </div>
                <div class="form-group radio-labels">
                  <label>Condition ?</label>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <div class="form-inline">
                    {{form.input type='radio' class="tiles-radio" property='hasTiles' name='tiles' label='YES'}}
                    {{form.input type='radio' class="tiles-radio" property='hasTiles' name='tiles' label='NO'}}
                    {{form.input type='radio' class="tiles-radio" property='hasTiles' name='tiles' label='N/A'}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-inline">
                    {{form.input type='radio' class="tiles-radio" property='hasSink' name='sink' label='YES'}}
                    {{form.input type='radio' class="tiles-radio" property='hasSink' name='sink' label='NO'}}
                    {{form.input type='radio' class="tiles-radio" property='hasSink' name='sink' label='N/A'}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-inline">
                    {{form.input type='radio' class="tiles-radio" property='hasElectricity' name='electricity' label='YES'}}
                    {{form.input type='radio' class="tiles-radio" property='hasElectricity' name='electricity' label='NO'}}
                    {{form.input type='radio' class="tiles-radio" property='hasElectricity' name='electricity' label='N/A'}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-inline">
                    {{form.input type='radio' class="tiles-radio" property='hasBalcony' name='balcony' label='YES'}}
                    {{form.input type='radio' class="tiles-radio" property='hasBalcony' name='balcony' label='NO'}}
                    {{form.input type='radio' class="tiles-radio" property='hasBalcony' name='balcony' label='N/A'}}
                  </div>
                </div>
                <div class="form-group">
                  <div class="form-inline">
                    {{form.input type='radio' class="tiles-radio" property='condition' name='condition' label='NEW'}}
                    {{form.input type='radio' class="tiles-radio" property='condition' name='condition' label='GOOD'}}
                    {{form.input type='radio' class="tiles-radio" property='condition' name='condition' label='OLD'}}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row" style="margin-top: 20px;">
            <div class="col-4">
              <div class="form-group">
                <label style="margin-right: 55px;">No of windows</label>
              </div>
              <div class="form-group">
                <label style="margin-right: 30px;">No of wall sockets</label>
              </div>
              <div class="form-group">
                <label style="margin-right: 85px;">No of taps</label>
              </div>
              <div class="form-group">
                <label>Upload a photo of the house</label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-inline inline-inputs">
                {{form.input property='noWindows' type='number'}}
              </div>
              <div class="form-inline inline-inputs">
                {{form.input property='numberofSockets' type='number'}}
              </div>
              <div class="form-inline inline-inputs">
                {{form.input property='numberofTaps' type='number'}}
              </div>
              <div class="form-inline inline-inputs">
                {{form.input property='photo' type='file'}}
              </div>
            </div>
          </div>

          <div class="form-group">
            <button class="btn btn-success float-left" {{ action "validatePage"  1}}><span class="oi oi-arrow-thick-left"></span> Prev</button>
            <button class="btn btn-success float-right" {{ action "validatePage" 3}}>Next <span class="oi oi-arrow-thick-right"></span></button>
          </div>
        {{/if}}

        {{#if (eq page 3)}}
          <div class="form-group" style="margin-top: 20px;">
            <h4 class="card-title">Contact person information</h4>
            <div class="dropdown-divider"></div>
            {{form.input property="fullName" label="Full name" placeholder="Full name ..."}}
            {{form.input property="phoneNumber" label="Phone number" placeholder="Phone No ..."}}
            <p>Select your position</p>
            <div style="padding-left: 20px;">
              {{form.checkbox property="owner"  label="Owner" canShowErrors=model.visibleErrors.active}}
              {{form.checkbox property="careTacker" label="Care-tacker" canShowErrors=model.visibleErrors.active}}
              {{form.checkbox property="agent" label="Agent" canShowErrors=model.visibleErrors.active}}
            </div>
          </div>
          <div class="form-group">
            <button class="btn btn-success float-left" {{ action "validatePage"  2}}><span class="oi oi-arrow-thick-left"></span> Prev</button>
            <button class="btn btn-success float-right" {{ action "saveRental"}}>SAVE PROPERTY <span class="oi oi-circle-check"></span></button>
          </div>
        {{/if}}

      {{/em-form}}
    </div>
  </div>
  <div class="col-12 col-sm-2">
    One of two columns
  </div>
</div>
