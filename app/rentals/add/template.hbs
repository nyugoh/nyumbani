<div class="row justify-content-center">
  <div class="col-12 col-sm-8">
    <div class="add-rental">
      <div>
        <h3>Add rentals property</h3>
      </div>
      {{#if (eq page 1)}}
        {{#em-form class='form' model=model formLayout='default' submitButton=false as |form|}}
          {{form.input property="location" label="Location" placeholder="Enter a property location..."}}
          {{form.input property="buildingName" label="Building Name" placeholder="Building name..."}}
          {{form.select property="type" label="Rental Type" prompt="--select type of house--" content=rentalTypes optionValuePath="id" optionLabelPath="name"}}
          <div class="form-group" style="margin-top: 20px;">
            <h4 class="card-title">Contact person information</h4>
            {{form.input property="fullName" label="Full name" placeholder="Full name..."}}
            {{form.input property="phoneNumber" label="Phone number" placeholder="Phone No..."}}
          </div>
          {{form.checkbox property="active" label="Active?" canShowErrors=model.visibleErrors.active}}
          <div class="form-group text-right">
            <button class="btn btn-success" {{ action "validateBasic"}}>Next <span class="oi oi-arrow-thick-right"></span></button>
          </div>
        {{/em-form}}
      {{/if}}

      {{#if (eq page 2)}}
        {{#em-form class='form' model=model formLayout='default' submitButton=false as |form|}}
          {{form.input property="monthlyFee" label="Monthly Rent"  type='number' placeholder="Enter a property location..."}}
          {{form.input property="desposit" label="House deposit" type='number' placeholder="Building name..."}}
          {{form.select property="type" label="Rental Type" prompt="--select type of house--" content=rentalTypes optionValuePath="id" optionLabelPath="name"}}
          {{form.checkbox property="active" label="Active?" canShowErrors=model.visibleErrors.active}}
        <div class="form-group">
          <button class="btn btn-success float-left" {{ action "validatePage"  1}}><span class="oi oi-arrow-thick-left"></span> Prev</button>
          <button class="btn btn-success float-right" {{ action "validatePage" 3}}>Next <span class="oi oi-arrow-thick-right"></span></button>
        </div>
        {{/em-form}}
      {{/if}}

      {{#if (eq page 3)}}
        {{#em-form class='form' model=model formLayout='default' submitButton=false as |form|}}
          {{form.input property="monthlyFee" label="Monthly Rent"  type='number' placeholder="Enter a property location..."}}
          {{form.input property="desposit" label="House deposit" type='number' placeholder="Building name..."}}
          {{form.select property="type" label="Rental Type" prompt="--select type of house--" content=rentalTypes optionValuePath="id" optionLabelPath="name"}}
          {{form.checkbox property="active" label="Active?" canShowErrors=model.visibleErrors.active}}
          <div class="form-group">
            <button class="btn btn-success float-left" {{ action "validatePage"  2}}><span class="oi oi-arrow-thick-left"></span> Prev</button>
            <button class="btn btn-success float-right" {{ action "saveRental"}}>SAVE PROPERTY <span class="oi oi-circle-check"></span></button>
          </div>
        {{/em-form}}
      {{/if}}
    </div>
  </div>
  <div class="col-12 col-sm-2">
    One of two columns
  </div>
</div>
