{{breadcrumb-location location='Landlords'}}
<div class="content mt-3">
  <div class="col-12">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Landlords</strong>
          </div>
          <div class="card-body">
            <table class="table">
              <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Position</th>
              </tr>
              </thead>
              <tbody>
              {{#each model as |landlord|}}
                {{#unless landlord.isNew}}
                  <tr>
                    <th scope="row">1</th>
                    <td>{{landlord.fullName}}</td>
                    <td>{{landlord.phoneNumber}}</td>
                    <td>{{landlord.position}}</td>
                  </tr>
                {{/unless}}
              {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col4">
        {{outlet}}
      </div>
    </div>
  </div>
</div>
