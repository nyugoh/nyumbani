<div>
  <div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
      <div class="login-content">
        <div class="login-logo">
          <a href="#">
            <img class="align-content" src="{{rootURL}}images/logo.png" alt="">
          </a>
        </div>
        <div class="login-form">
          <form {{action "authenticate" on="submit"}}>
            <div class="form-group">
              <label>Email address</label>
              {{input type="email" class="form-control" name='email' placeholder="Email" value=email}}
            </div>
            <div class="form-group">
              <label>Password</label>
              {{input type="password" class="form-control" name='password' placeholder="Password" value=password}}
            </div>
            {{#if loading}}
              <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Loading...</button>
            {{else}}
              <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Sign in</button>
            {{/if}}
            {{#if errorMessage}}
              <div style="margin-top: 10px;" class="alert  alert-danger alert-dismissible fade show" role="alert">
                {{errorMessage}}
              </div>
            {{/if}}
            <div class="register-link m-t-15 text-center">
              <p>Don't have account ? {{#link-to 'register'}}Sign Up Here{{/link-to}} </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>